<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/book_img"
        android:layout_width="@dimen/dp_69"
        android:layout_height="@dimen/dp_93"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_17"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_13">
        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书籍名称"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_15"/>

        <TextView
            android:id="@+id/book_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介内容简介内容简介内容简介内容简介内容简介内容简介内容简介内容简介内容简介..."
            android:textColor="#ff666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/sp_12"
            android:layout_below="@id/book_name"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_8"/>

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:layout_below="@id/book_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_8"/>

        <TextView
            android:id="@+id/add_shelf"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:text="开始阅读"
            android:gravity="center"
            android:textColor="#ff0b87fa"
            android:textSize="@dimen/sp_10"
            android:layout_alignBottom="@id/book_author"
            android:background="@drawable/shape_shujia"
            android:layout_marginRight="@dimen/dp_6"/>
    </RelativeLayout>

</LinearLayout>
